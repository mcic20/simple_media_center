<Window x:Name="windowMusic" x:Class="Video_sound.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Video_sound"
        mc:Ignorable="d"
        Title="Music" Height="440" Width="482" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <Button x:Name="btnPlay" Content="&gt;" HorizontalAlignment="Left" Margin="216,362,0,0" VerticalAlignment="Top" FontSize="24" Width="64" FontWeight="Bold" Click="btnPlay_Click" Height="49"/>
        <Button x:Name="btnOpen" Content="Open File" HorizontalAlignment="Left" Margin="357,367,0,0" VerticalAlignment="Top" Height="21" Width="86" Click="btnOpen_Click"/>
        <MediaElement x:Name="elementMusic" HorizontalAlignment="Left" Height="75" Margin="10,215,0,0" VerticalAlignment="Top" Width="118" UnloadedBehavior="Manual"/>
        <Slider x:Name="sliderVolume" HorizontalAlignment="Left" Margin="27,382,0,0" VerticalAlignment="Top" Width="120" ValueChanged="sliderVolume_ValueChanged"/>
        <Label x:Name="lvlVoumeStatic" Content="Volume:" HorizontalAlignment="Left" Margin="25,357,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtVolume" HorizontalAlignment="Left" Height="16" Margin="78,362,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30"/>
        <DataGrid HorizontalAlignment="Left" Height="306" Margin="93,20,0,0" VerticalAlignment="Top" Width="350" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
